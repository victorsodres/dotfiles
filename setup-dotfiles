#!/bin/bash

echo -e "---WORK IN PROGRESS---\n\n"

echo -e "Copiando scripts para o ~/bin\n"
cp ./scripts/standby-screen ~/bin
cp ./scripts/toggleTouchpad ~/bin

echo -e "Atualizando i3 configurations\n"
echo -e "i3config to ./i3/config\n"
ln -fs ~/dotfiles/i3/config ~/.i3/config
echo -e "i3blocks to ./i3/i3blocks\n"
ln -fs ~/dotfiles/i3/blocks ~/.i3/i3blocks
